@model SBCode_WebPhone.Data.HangHoa

@{ ViewData["Title"] = "Tạo mới Hàng hóa"; }

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Mã Loại</label>
                @await Html.PartialAsync("LoaiDropDown", ViewBag.DanhSachLoai as LoaiDropDownVM)
            </div>
            <div class="form-group">
                <label class="control-label">Tên Hàng Hóa</label>
                <input asp-for="TenHh" class="form-control" />
                <span asp-validation-for="TenHh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Đơn Giá</label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giảm Giá</label>
                <input asp-for="GiamGia" class="form-control" />
                <span asp-validation-for="GiamGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Số Lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hình Ảnh</label>
                <input asp-for="Hinh" type="file" class="form-control" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Chất Liệu</label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thương Hiệu</label>
                <input asp-for="ThuongHieu" class="form-control" />
                <span asp-validation-for="ThuongHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Xuất Xứ</label>
                <input asp-for="XuatXu" class="form-control" />
                <span asp-validation-for="XuatXu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô Tả</label>
                <textarea asp-for="ChiTiet" class="form-control"></textarea>
                <span asp-validation-for="ChiTiet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous"></script>
        <link href="~/lib/summernote/summernote.css" rel="stylesheet" />
        <script src="~/lib/summernote/summernote.js"></script>
        <script>
            $(document).ready(function () {
                $("#ChiTiet").summernote({
                    placeholder: 'Nhập Mô Tả Hàng hóa',
                    tabsize: 4,
                    height: 150
                });
            });
        </script>
    }