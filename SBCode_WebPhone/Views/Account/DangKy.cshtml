@model SBCode_WebPhone.ViewModels.DangKyVM
@{
    ViewData["Title"] = "DangKy";
    Layout = "~/Views/Shared/_Layout_Shop.cshtml";
}

<form asp-action="DangKy" id="register-form" style="margin-bottom:25px" class="auth-form" >
    <div class="auth-form__container">
        <div class="auth-form__header">
            <div class="auth-form__heading">Đăng ký</div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="auth-form__groups">
            <div class="auth-form__group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="auth-form__input" placeholder="Họ và Tên" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="SoDienThoai" class="control-label"></label>
                <input asp-for="SoDienThoai"
                       class="auth-form__input" placeholder="Số Điện Thoại" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="auth-form__input"
                       placeholder="Email của bạn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" class="auth-form__input"
                       placeholder="Mật khẩu của bạn" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="NhapLaiMatKhau" class="control-label"></label>
                <input asp-for="NhapLaiMatKhau"
                       class="auth-form__input" placeholder="Nhập lại mật khẩu của bạn" />
                <span asp-validation-for="NhapLaiMatKhau" class="auth-form__message"></span>

            </div>
            <div class="auth-form__group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" 
                       class="auth-form__input" placeholder="Địa Chỉ" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>


        </div>

        <div class="auth-form__aside">
            <p class="auth-form__policy-text">
                Bằng việc đăng ký, bạn đã đồng ý với SBCode-Shop
                <a href="" class="auth-form__text-link">Điều khoản dịch vụ</a> &
                <a href="" class="auth-form__text-link">Chính sách bảo mật</a>
            </p>

            <div class="auth-form__switch-wrapper">
                <span class="auth-form__switch-text">Bạn đã có tài khoản?</span>
                <span class="auth-form__switch-btn">@Html.ActionLink("Đăng Nhập", "DangNhap", "Account")</span>
            </div>
        </div>

        <div class="auth-form__controls">
            <button class="btn auth-form__controls-back">@Html.ActionLink("TRỞ LẠI", "Index", "HangHoa")</button>
            <input type="submit" value="ĐĂNG KÝ" class="btn btn--primary" />
        </div>
    </div>


    <div class="auth-form__socials">
        @*<a href="" class="auth-form__socials--facebook btn btn--size-s btn--with-icon">
            <i class="auth-form__socials-icon fab fa-facebook-square"></i>
            <span class="auth-form__socials-title">
                Kết nối với Facebook
            </span>
        </a>
        <a href="" class="auth-form__socials--google btn btn--size-s btn--with-icon">
            <i class="auth-form__socials-icon fab fa-google"></i>
            <span class="auth-form__socials-title">
                Kết nối với Google
            </span>
        </a>*@
    </div>
</form>


