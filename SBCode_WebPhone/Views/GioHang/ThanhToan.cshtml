@using SBCode_WebPhone.Helper;
@model SBCode_WebPhone.ViewModels.ThanhToanVM
@{ ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout_Shop.cshtml"; }

<form asp-action="PaypalCheckout" id="register-form" style="margin-bottom:25px" class="auth-form">
    <div class="auth-form__container">
        <div class="auth-form__header">
            <div class="auth-form__heading">
                <h2>Thanh toán</h2>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="auth-form__groups">
            <div class="auth-form__group">
                <label class="control-label">Thông tin người mua</label>
                <input readonly class="auth-form__input"
                       placeholder="Tên người mua" value="@User.Identity.Name" />
                <span class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="NguoiNhan" class="control-label">Người nhận</label>
                <input asp-for="NguoiNhan" class="auth-form__input"
                       placeholder="Thông tin hàng đặt mua" value="@User.Identity.Name" />
                <span asp-validation-for="NguoiNhan" class="text-danger"></span>
            </div>
            <div class="auth-form__group">
                <label asp-for="DiaChiGiao" class="control-label">Địa chỉ giao</label>
                <input asp-for="DiaChiGiao" class="auth-form__input"
                       placeholder="Thông tin người nhận hàng" value="@ViewBag.getdiachi" />
                <span asp-validation-for="DiaChiGiao" class="text-danger"></span>
            </div>
        </div>

