    <div class="auth-form__controls paypal-form">
        <a asp-action="Index" asp-controller="GioHang" class="paypal-quaylai">
            <button class="empty-cart__link-btn clear-btn">Quay Lại</button>
        </a>
        <button class="paypal_btn" type="submit" asp-action="PaypalCheckout">
            <img class="paypal_img" src="~/Images/paypal_checkout.gif" height="100" />
        </button>
    </div>
